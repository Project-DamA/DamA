<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLoginActivity">

    <TextView
        android:id="@+id/background_color_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        />




    <ImageView
        android:id="@+id/ResetPasswordView_Logo_iv"
        android:layout_width="188dp"
        android:layout_height="184dp"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toTopOf="@+id/ResetPasswordView_cv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dama_logo_skyblue" />

    <TextView
        android:id="@+id/ResetPasswordView_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="비밀번호 찾기"
        android:textColor="@color/mainColor"
        app:layout_constraintBottom_toTopOf="@+id/ResetPasswordView_cv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResetPasswordView_Logo_iv"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ResetPasswordView_cv"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="10dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ResetPasswordView_email_tv"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="#FFFCFC"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="6dp"
                    android:hint="이메일"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="6dp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/ResetPasswordView_btn"
        android:layout_width="279dp"
        android:layout_height="54dp"
        android:background="@drawable/login_join_btn"
        android:text="이메일 전송"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/ResetPasswordView_cv"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="@+id/ResetPasswordView_cv"
        app:layout_constraintStart_toStartOf="@+id/ResetPasswordView_cv"
        tools:layout_editor_absoluteY="450dp" />


</androidx.constraintlayout.widget.ConstraintLayout>