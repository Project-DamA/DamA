<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/background_color_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/SettingCafeView_details_cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent
"               app:layout_constraintBottom_toBottomOf="parent"

                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                >


                <EditText
                    android:id="@+id/SettingCafeView_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="80dp"
                    android:ems="10"
                    android:hint="카페지점이름"
                    android:inputType="none">

                </EditText>

                <EditText
                    android:id="@+id/SettingCafeView_subName_et"
                    android:layout_width="232dp"
                    android:layout_height="30dp"

                    android:layout_marginStart="80dp"
                    android:layout_marginTop="50dp"
                    android:ems="10"
                    android:textSize="8dp"
                    android:hint="카페 한줄 설명"
                    android:inputType="none">

                </EditText>

                <ImageView
                    android:id="@+id/SettingCafeView_locationIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dama_logo_skyblue"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="90dp"/>

                <TextView
                    android:id="@+id/SettingCafeView_locationTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="75dp"
                    android:text="Location"
                    android:textColor="#7C7575"
                    android:textSize="8dp"
                    android:textStyle="normal"

                    />


                <EditText
                    android:id="@+id/SettingCafeView_location_ev"
                    android:layout_width="200dp"
                    android:layout_height="40dp"

                    android:textSize="12dp"
                    android:ems="10"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="80dp"
                    android:inputType="textMultiLine"
                    android:hint="카페위치" >

                </EditText>





                <View
                    android:layout_width="360dp"
                    android:layout_height="1px"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="15dp"
                    android:background="#BEBEBF" />

                <ImageView
                    android:id="@+id/SettingCafeView_phoneIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dama_logo_skyblue"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="150dp"/>

                <TextView
                    android:id="@+id/SettingCafeView_phoneTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="135dp"
                    android:text="Telephone"
                    android:textColor="#7C7575"
                    android:textSize="8dp"
                    android:textStyle="normal"

                    />

                <EditText
                    android:id="@+id/SettingCafeView_phone_ev"
                    android:layout_width="200dp"
                    android:layout_height="40dp"

                    android:textSize="12dp"
                    android:ems="10"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="140dp"
                    android:inputType="phone"
                    android:hint="전화번호" >

                </EditText>

                <View
                    android:layout_width="360dp"
                    android:layout_height="1px"
                    android:layout_marginTop="185dp"
                    android:layout_marginStart="15dp"
                    android:background="#BEBEBF" />


                <ImageView
                    android:id="@+id/SettingCafeView_timeIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dama_logo_skyblue"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="210dp"/>

                <TextView
                    android:id="@+id/SettingCafeView_timeTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="195dp"
                    android:text="Time"
                    android:textColor="#7C7575"
                    android:textSize="8dp"
                    android:textStyle="normal"

                    />

                <EditText
                    android:id="@+id/SettingCafeView_time_ev"
                    android:layout_width="200dp"
                    android:layout_height="40dp"

                    android:textSize="12dp"
                    android:ems="10"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="200dp"
                    android:inputType="none"
                    android:hint="운영시간" >

                </EditText>

                <View
                    android:layout_width="360dp"
                    android:layout_height="1px"
                    android:layout_marginTop="245dp"
                    android:layout_marginStart="15dp"
                    android:background="#BEBEBF" />


                <ImageView
                    android:id="@+id/SettingCafeView_facilityIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dama_logo_skyblue"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="270dp"/>

                <TextView
                    android:id="@+id/SettingCafeView_facilityTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="255dp"
                    android:text="Facility"
                    android:textColor="#7C7575"
                    android:textSize="8dp"
                    android:textStyle="normal"

                    />

                <EditText
                    android:id="@+id/SettingCafeView_facility_ev"
                    android:layout_width="200dp"
                    android:layout_height="40dp"

                    android:textSize="12dp"
                    android:ems="10"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="260dp"
                    android:inputType="none"
                    android:hint="포장여부,재난지원금 등 기타내용" >

                </EditText>

                <View
                    android:layout_width="360dp"
                    android:layout_height="1px"
                    android:layout_marginTop="305dp"
                    android:layout_marginStart="15dp"
                    android:background="#BEBEBF" />

                <ImageView
                    android:id="@+id/SettingCafeView_rentalIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dama_logo_skyblue"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="330dp"/>

                <TextView
                    android:id="@+id/SettingCafeView_rentalTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="315dp"
                    android:text="tumbler"
                    android:textColor="#7C7575"
                    android:textSize="8dp"
                    android:textStyle="normal"

                    />

                <EditText
                    android:id="@+id/SettingCafeView_rentaltumbler_ev"
                    android:layout_width="200dp"
                    android:layout_height="40dp"

                    android:textSize="12dp"
                    android:ems="10"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="320dp"
                    android:inputType="none"
                    android:hint="매장내 가용텀블러 텀블러 개수" >

                </EditText>


                <Button
                    android:id="@+id/SettingCafeView_SaveButton_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:background="@drawable/login_join_btn"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="380dp"
                    android:text="저장하기"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/SettingCafeView_appbar_ab"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
            app:toolbarId="@+id/DetailCafeViewTop_toolbar_tb">
            <!--            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"-->

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/SettingCafeView_viewPager_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/SettingCafeView_toolbar_tb"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="parallax" />


            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/SettingCafeView_indicator_di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="180dp"
                app:dotsColor="@color/mainColor"
                app:dotsCornerRadius="8dp"
                app:dotsSize="16dp"
                app:dotsSpacing="4dp"
                app:dotsStrokeColor="@color/subColor"
                app:dotsStrokeWidth="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>