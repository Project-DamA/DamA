<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/DetailCafeView_details_cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/DetailCafeView_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/DetailCafeView_subName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#4C4B4B"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/DetailCafeView_locationIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/dama_logo_skyblue"
                    android:contentDescription="LocationIcon"/>

                <TextView
                    android:id="@+id/RegistrationCafeViewBottom_locationTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="75dp"
                    android:text="Location"
                    android:textColor="#7C7575"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/DetailCafeView_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="90dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/DetailCafeView_landNumber_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="110dp"
                    android:text="지번: 광사동 656-3"
                    android:textColor="#4C4B4B"
                    android:textSize="11sp"
                    android:textStyle="bold"

                    />


                <View
                    android:layout_width="360dp"
                    android:layout_height="1px"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="130dp"
                    android:background="#BEBEBF" />

                <ImageView
                    android:id="@+id/DetailCafeView_callIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="150dp"
                    android:src="@drawable/dama_logo_skyblue" />

                <TextView
                    android:id="@+id/DetailCafeView_callTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="135dp"
                    android:text="Telephone"
                    android:textColor="#7C7575"
                    android:textSize="11sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/DetailCafeView_call_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="150dp"
                    android:text=""
                    android:textColor="#0B25B6"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="360dp"
                    android:layout_height="1px"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="185dp"
                    android:background="#BEBEBF" />


                <ImageView
                    android:id="@+id/DetailCafeView_runtimeIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="210dp"
                    android:src="@drawable/dama_logo_skyblue" />

                <TextView
                    android:id="@+id/DetailCafeView_runtimeTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="195dp"
                    android:text="Time"
                    android:textColor="#7C7575"
                    android:textSize="11sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/DetailCafeView_runtime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="210dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="360dp"
                    android:layout_height="1px"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="245dp"
                    android:background="#BEBEBF" />


                <ImageView
                    android:id="@+id/DetailCafeView_facilityIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="270dp"
                    android:src="@drawable/dama_logo_skyblue" />

                <TextView
                    android:id="@+id/DetailCafeView_facilityTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="255dp"
                    android:text="Facility"
                    android:textColor="#7C7575"
                    android:textSize="11sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/DetailCafeView_facility_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="270dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    />

                <View
                    android:layout_width="360dp"
                    android:layout_height="1px"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="305dp"
                    android:background="#BEBEBF" />

                <ImageView
                    android:id="@+id/DetailCafeView_rentalTumblerIcon_iv"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="330dp"
                    android:src="@drawable/dama_logo_skyblue" />

                <TextView
                    android:id="@+id/DetailCafeView_rentalTumblerTitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="100dp"
                    android:layout_marginTop="315dp"
                    android:text="Owner's Tumbler Count"
                    android:textColor="#7C7575"
                    android:textSize="11sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/DetailCafeView_rentalTumbler_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="330dp"
                    android:text=""
                    android:textColor="#5A8CEF"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />

                <View
                    android:layout_width="360dp"
                    android:layout_height="1px"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="365dp"
                    android:background="#BEBEBF" />




            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
            app:toolbarId="@+id/DetailCafeView_toolbar_tb">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/DetailCafeView_viewPager_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/DetailCafeView_toolbar_tb"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="parallax" />


            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/DetailCafeView_indicator_di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="180dp"
                app:dotsColor="@color/mainColor"
                app:dotsCornerRadius="8dp"
                app:dotsSize="16dp"
                app:dotsSpacing="4dp"
                app:dotsStrokeColor="@color/subColor"
                app:dotsStrokeWidth="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>